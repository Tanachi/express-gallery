doctype html
html(lang='en')
- var count = 0
html
  head
    meta(charset='UTF-8')
    title= author
  body
    img(src=url id=num)
    p= 'Uploaded by  ' + author
    p= description
  form( action='/gallery/' + num + '/edit')
    input(type='submit', value='EDIT')
  form( method='POST' action='/gallery/' + num)
    input(type="hidden" name="_method" value="DELETE")
    input(type='hidden' name="_id" value=num)
    input(type='submit', value='DELETE')

