-var loginHelp = "location.href = '/" + loginStatus + "'"

doctype html
html(lang='en')
html
  head
    meta(charset='UTF-8')
    title Edit Image
    link(rel='stylesheet', href='/css/styles.css')
  body
    div(class= 'buttonBar')
      button(type='button', onclick="location.href='/gallery/new'") New Picture
      button(type='button', onclick= loginHelp) #{loginStatus.charAt(0).toUpperCase() + loginStatus.slice(1)}
      button(type='button', onclick="location.href='/'") Home
    br
    div(class = 'editImage')
      div(class = 'editFrame')
        img(src=url id=num)
        p= 'Uploaded by ' + author
        p= description
        form(class = 'editForm' type= 'x-www-form-urlencoded' method='POST' action='/gallery')
          h2 Url
          input(type= "text" name="url")
          br
          h2 Description
          textarea(name="description")
          br
          input(type='submit', value='Submit')
